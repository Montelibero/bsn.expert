{% extends "page.twig" %}

{% block title %}Tags{% endblock %}

{% block breadcrumbs %}
    <li><a href="/" aria-current="page">{{ 'common.short_name'|trans }}</a></li>
    <li class="is-active"><a href="/tags/" aria-current="page">{{ 'nav.tags'|trans }}</a></li>
{% endblock %}


{% block content %}
    <script>
        $(function () {
            $(".table").tablesorter();
        });
    </script>
    <h1 class="title">{{ 'nav.tags'|trans }}</h1>

    <table class="table" data-sortlist="[[1,1]]">
        <thead>
        <tr>
            <th data-sorter="text">{{ 'tags_page.tag'|trans }}</th>
            <th data-sorter="digit">{{ 'tags_page.out'|trans }}</th>
            <th data-sorter="digit">{{ 'tags_page.in'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="/tags/{{ tag.name }}{% if filter_query %}?{{ filter_query }}{% endif %}">{{ tag.name }}</a></td>
                <td>{{ tag.out }}</td>
                <td>{{ tag.in }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

