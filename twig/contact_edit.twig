{% extends "page.twig" %}

{% block title %}{{ account.short_name}} â€” {{ 'nav.contacts'|trans }}{% endblock %}

{% block breadcrumbs %}
    <li><a href="/" aria-current="page">{{ 'common.short_name'|trans }}</a></li>
    <li><a href="/contacts/" aria-current="page">{{ 'nav.contacts'|trans }}</a></li>
    <li class="is-active"><a href="#" aria-current="page">{{ account.short_id }}</a></li>
{% endblock %}


{% block content %}
    <h1 class="title">{{ account.display_name }}</h1>
    <h1 class="subtitle">
        <span class="stellar_address is-family-monospace">{{ account.id }}</span>
    </h1>

    <form method="post" action="/contacts/{{ account.id }}">
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
    {% if return_to %}<input type="hidden" name="return_to" value="{{ return_to }}">{% endif %}
    <div class="field">
        <label class="label" for="new_name">Display name</label>
        <div class="control">
            <input type="text" name="name" class="input" placeholder="Optional name" size="32" maxlength="64" value="{{ name }}">
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <input type="reset" class="button is-light" value="Reset">
        </div>
        <div class="control">
            <input type="submit" class="button is-link" name="action"  value="{% if is_exists %}{{ 'contacts.edit.action.save'|trans }}{% else %}{{ 'contacts.edit.action.add'|trans }}{% endif %}">
        </div>
    </div>
    {% if is_exists %}
    <div class="field">
        <div class="control">
            <input type="submit" class="button is-danger" name="action" value="{{ 'contacts.edit.action.delete'|trans }}">
        </div>
    </div>
    {% endif %}
    </form>

{% endblock %}

