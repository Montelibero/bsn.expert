{% extends "page.twig" %}

{% block title %}{{ 'nav.editor'|trans }}{% endblock %}

{% block breadcrumbs %}
    <li><a href="/" aria-current="page">{{ 'common.short_name'|trans }}</a></li>
    <li class="is-active"><a href="#" aria-current="page">{{ 'nav.editor'|trans }}</a></li>
{% endblock %}


{% block content %}
    <h1 class="title">{{ 'nav.editor'|trans }}</h1>
    <form action="/editor/">
        <div class="field">
            <label class="label" for="stellar_account_id">Stellar account</label>
            <input
                    id="stellar_account_id"
                    class="input"
                    type="text"
                    name="id"
                    placeholder="G..."
                    value="{{ default_id }}"
                    maxlength="56"
            />
        </div>
        <div class="columns">
            <div class="column">
                <div class="field">
                    <label class="label" for="tag">Only for tag</label>
                    <input
                            id="tag"
                            class="input"
                            type="text"
                            name="tag"
                            placeholder="TagName"
                            value="{{ single_tag }}"
                            maxlength="56"
                    />
                </div>
            </div>
            <div class="column">
                <div class="field">
                    <label class="label" for="contact">Only for contact</label>
                    <input
                            id="contact"
                            class="input"
                            type="text"
                            name="contact"
                            placeholder="G..."
                            value="{{ single_contact }}"
                            maxlength="56"
                    />
                </div>
            </div>
        </div>
        <div class="field is-grouped">
            <div class="control">
                <input type="reset" class="button is-light" value="Reset">
            </div>
            <div class="control">
                <input type="submit" class="button is-link" value="Edit â†’">
            </div>
        </div>
    </form>
{% endblock %}

